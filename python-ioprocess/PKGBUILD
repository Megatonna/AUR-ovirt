# Contributor: Andrii Sokolenko
# Based by Ovirt ioprocess.spec
pkgbase=(ioprocess-git)
pkgname=(python2-ioprocess)
pkgver=0.17.gite82786d
pkgrel=1
pkgdesc="Slave process to perform risky IO"
arch=('i686' 'x86_64')
url="https://github.com/oVirt/ioprocess"
license=('GPLv2+')
groups=()
conflicts=()
replaces=()
backup=()
depends=('yajl' 'python2')
checkdepends=('python-tox')
provides=()
options=(!emptydirs)
install=()
source=('git+https://gerrit.ovirt.org/p/ioprocess.git')
sha256sums=('SKIP')
prepare() {
    grep -Rle "#\!/usr/bin/python" * | xargs -r sed -ie 's/#!\/usr\/bin\/\bpython\b/\#!\/usr\/bin\/python2/g'
    grep -Rle "/usr/bin/env python" * | xargs -r sed -ie 's/\/usr\/bin\/env \bpython\b/\/usr\/bin\/env python2/g'
    cd ${srcdir}/${pkgbase%%-git}/bindings/python
    sed -ie 's/python3.5/python3/g' tox.ini
}
check() {
    cd ${srcdir}/${pkgbase%%-git}/bindings/python
    tox
}
build() {
  cd ${srcdir}/${pkgbase%%-git}
  export PYTHON=$(which python2) 
  ./autogen.sh
  ./configure --prefix=/usr --libexec=/usr/lib/ioprocess/
  make
}

package_python2-ioprocess() {
  cd ${srcdir}/${pkgbase%%-git}
  make DESTDIR=${pkgdir} install
}

